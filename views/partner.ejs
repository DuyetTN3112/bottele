<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partner</title>
    <style>
        body {
            font-family: sans-serif;
            background: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            margin-bottom: 20px;
        }

        .card {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        input {
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        button {
            padding: 8px 16px;
            background: #333;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #f0f0f0;
        }

        .empty {
            color: #999;
        }

        a {
            color: #333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Partner - <%= user.username %> | <a href="/auth/logout">Logout</a></h1>

        <div class="card">
            <h3>Them san pham</h3>
            <form action="/partner/product/add" method="POST">
                <input type="text" name="name" placeholder="Ten" required>
                <input type="number" name="price" placeholder="Gia" required min="0">
                <input type="text" name="description" placeholder="Mo ta">
                <button type="submit">Them</button>
            </form>
        </div>

        <div class="card">
            <h3>San pham cua ban (<%= products.length %>)</h3>
            <% if (products.length===0) { %>
                <p class="empty">Chua co san pham</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>Ten</th>
                            <th>Gia</th>
                            <th>Mo ta</th>
                            <th>Ngay tao</th>
                        </tr>
                        <% products.forEach(function(p) { %>
                            <tr>
                                <td>
                                    <%= p.name %>
                                </td>
                                <td>
                                    <%= p.price.toLocaleString('vi-VN') %>
                                </td>
                                <td>
                                    <%= p.description || '-' %>
                                </td>
                                <td>
                                    <%= new Date(p.createdAt).toLocaleDateString('vi-VN') %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                    <% } %>
        </div>
    </div>
</body>

</html>