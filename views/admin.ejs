<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <style>
        body {
            font-family: sans-serif;
            background: #f5f5f5;
            padding: 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        h1 {
            margin-bottom: 20px;
        }

        .stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .stat {
            background: #fff;
            padding: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
            text-align: center;
            flex: 1;
        }

        .stat h3 {
            margin: 0;
            font-size: 1.5em;
        }

        .stat p {
            margin: 5px 0 0;
            color: #666;
        }

        .card {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background: #f0f0f0;
        }

        .empty {
            color: #999;
        }

        a {
            color: #333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Admin - <%= user.username %> | <a href="/auth/logout">Logout</a></h1>

        <div class="stats">
            <div class="stat">
                <h3>
                    <%= stats.totalUsers || 0 %>
                </h3>
                <p>Users</p>
            </div>
            <div class="stat">
                <h3>
                    <%= stats.totalProducts || 0 %>
                </h3>
                <p>San pham</p>
            </div>
            <div class="stat">
                <h3>
                    <%= stats.totalOrders || 0 %>
                </h3>
                <p>Don hang</p>
            </div>
            <div class="stat">
                <h3>
                    <%= (stats.totalRevenue || 0).toLocaleString('vi-VN') %>
                </h3>
                <p>Doanh thu</p>
            </div>
        </div>

        <div class="card">
            <h3>San pham</h3>
            <% if (products.length===0) { %>
                <p class="empty">Chua co</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>Ten</th>
                            <th>Gia</th>
                            <th>Mo ta</th>
                            <th>Ngay tao</th>
                        </tr>
                        <% products.forEach(function(p) { %>
                            <tr>
                                <td>
                                    <%= p.name %>
                                </td>
                                <td>
                                    <%= p.price.toLocaleString('vi-VN') %>
                                </td>
                                <td>
                                    <%= p.description || '-' %>
                                </td>
                                <td>
                                    <%= new Date(p.createdAt).toLocaleDateString('vi-VN') %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                    <% } %>
        </div>

        <div class="card">
            <h3>Users</h3>
            <% if (users.length===0) { %>
                <p class="empty">Chua co</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Ngay tao</th>
                        </tr>
                        <% users.forEach(function(u) { %>
                            <tr>
                                <td>
                                    <%= u.username %>
                                </td>
                                <td>
                                    <%= u.role %>
                                </td>
                                <td>
                                    <%= new Date(u.createdAt).toLocaleDateString('vi-VN') %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                    <% } %>
        </div>

        <div class="card">
            <h3>Don hang</h3>
            <% if (orders.length===0) { %>
                <p class="empty">Chua co</p>
                <% } else { %>
                    <table>
                        <tr>
                            <th>User</th>
                            <th>San pham</th>
                            <th>SL</th>
                            <th>Tong</th>
                            <th>Thoi gian</th>
                        </tr>
                        <% orders.slice(-10).reverse().forEach(function(o) { %>
                            <tr>
                                <td>
                                    <%= o.user ? o.user.username : '-' %>
                                </td>
                                <td>
                                    <%= o.product ? o.product.name : '-' %>
                                </td>
                                <td>
                                    <%= o.quantity %>
                                </td>
                                <td>
                                    <%= o.totalPrice.toLocaleString('vi-VN') %>
                                </td>
                                <td>
                                    <%= new Date(o.createdAt).toLocaleString('vi-VN') %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                    <% } %>
        </div>
    </div>
</body>

</html>